if($this->importStarted) {
    echo '<h2>SQL Files were imported!</h2>';
    if(!empty($this->errors)) {
        echo '<b>With the following errors:</b>';
        print_r($this->errors);
    }
}

if(empty($this->sqlFilesNew) && empty($this->sqlFilesChanged)) {
    echo "<h2>No modified / new SQL files found!</h2><br /><br />";
    return;
}

$printTable = function(array $data) {
    $cellcss = ' style="border:1px solid black; padding:0 5px;"';
    echo '<table style="border:1px solid black;border-collapse: collapse;">';
    echo '<tr><th'.$cellcss.'>Origin SQL Package</th><th'.$cellcss.'>SQL File</th></tr>';
    $row = '<tr><td%s>%s</td><td%s>%s</td></tr>';
    foreach($data as $file) {
        printf($row, $cellcss, $file['origin'], $cellcss, $file['relativeToOrigin']);
    }
    echo '</table>';
};

if(!empty($this->sqlFilesNew)) {
    echo '<h2>New SQL files found:</h2>';
    $printTable($this->sqlFilesNew);
}
if(!empty($this->sqlFilesChanged)) {
    echo '<h2>Modified SQL files found:</h2>';
    echo '<p style="font-style:italic;">This files has to been applied manually to the database:</p>';
    $printTable($this->sqlFilesChanged);
}
//no form anymore after successfull call. The user has to reload first!
if($this->importStarted) {
    return;
}
